<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.facci.ingresovotantescp.MainActivityCP">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:id="@+id/lblnombre"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Apellido"
        android:id="@+id/lblApellido"
        android:layout_marginTop="67dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Recinto Electoral"
        android:id="@+id/lblRecinto"
        android:layout_below="@+id/lblApellido"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="AÃ±o de Nacimiento:"
        android:id="@+id/lblNacimiento"
        android:layout_alignBaseline="@+id/txtNacimiento"
        android:layout_alignBottom="@+id/txtNacimiento"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar"
        android:id="@+id/btnInsertar"
        android:onClick="insertarClick"
        android:layout_above="@+id/btnVerTodos"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Todos"
        android:id="@+id/btnVerTodos"
        android:onClick="verTodosClick"
        android:layout_alignBaseline="@+id/btnModificar"
        android:layout_alignBottom="@+id/btnModificar"
        android:layout_toEndOf="@+id/btnInsertar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombre"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/btnModificar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtApellido"
        android:layout_alignBottom="@+id/lblApellido"
        android:layout_alignEnd="@+id/btnModificar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtRecinto"
        android:layout_alignTop="@+id/lblRecinto"
        android:layout_alignStart="@+id/txtApellido" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNacimiento"
        android:layout_below="@+id/txtRecinto"
        android:layout_alignStart="@+id/txtRecinto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:id="@+id/btnEliminar"
        android:onClick="eliminarRegistroClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modidicar"
        android:id="@+id/btnModificar"
        android:onClick="modificarRegistroClick"
        android:layout_alignTop="@+id/btnEliminar"
        android:layout_toEndOf="@+id/btnVerTodos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ID:"
        android:id="@+id/lblId"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtID"
        android:layout_below="@+id/lblId"
        android:layout_alignEnd="@+id/btnModificar" />

</RelativeLayout>
